" this file won't work with vi, only vim 
set nocompatible
" detect filetypes associated plugins and whatnot
filetype on
filetype plugin on
syntax on
filetype indent on

" show line numbers
set number relativenumber
" highlight the line the cursor is on 
set cursorline

" conver tabs into spaces
set expandtab
set tabstop=4
" vim has different modes like insert and visual. This will show you which
" mode you are in
set showmode
set history=1000
